<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="wrapper">

        <header class="header">
            <div class="header__container">
                <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
                    <div class="container-fluid">
                        <a href="/cars/priora" class="navbar-brand">
                            <h3>Priora</h3>
                        </a>
                        <button type="button" class="navbar-toggler" data-bs-toggle="collapse"
                            data-bs-target="#navbarCollapse9">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarCollapse9">
                            <div class="navbar-nav">
                                <a href="/" class="nav-item nav-link active">Главная</a>
                                <% menu.forEach(function(car){ %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/cars/<%=car.nick%>">
                                            <%=car.title%>
                                        </a>
                                    </li>
                                    <% }) %>
                            </div>
                            <div class="navbar-nav ms-auto">
                                <a href="#" class="nav-item nav-link">Войти</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>

        </header>

        <main class="page">
            <div class="page__container">
                <%- body %>
            </div>
        </main>


        <footer class="footer">
            <div class="footer__container">
                <a class="footer__link" href="https://github.com/edemkaaa">Edem Asanov/a>
            </div>
        </footer>

    </div>
</body>

</html>